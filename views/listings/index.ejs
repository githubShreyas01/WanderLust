<% layout("/layouts/boilerplate") -%>
<body>
    <!--<h3>All Listings</h3> -->
<!-- <form method="GET" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->

<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter{
        text-align: center;
        margin-right: 2em;
        margin-top: 2rem;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
        border-bottom-style: solid;
        text-decoration-color: gray;
    }
    .filter p {
        font-size: 0.8rem;
    }

    .tax-info{
        display: none;
    }
    
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 5rem;
        display: flex;
        align-items: center;
    }

    .filters a{
        text-decoration: none;
        color: gray;
        opacity: 1rem;
    }

    .filters a:hover {
        color: black;
    }
    
    .filters{
        height: 7rem;
    }
</style>

<div id="filters" class="filters">
    <div class="filter icon">
        <a href="/listings"><div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </a>
    </div>

    <div class="filter icon">
        <a href="/listings"><div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
        </a>
    </div>

    <div class="filter">
        <a href=""><div><i class="fa-solid fa-fire"></i></div>
        <p>Iconic Cities</p>
        </a>
    </div>
    
    <div class="filter">
        <a href=""><div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountains</p>
        </a>
    </div>

    <div class="filter">
        <a href=""><div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beaches</p>
        </a>
    </div>
    
    <div class="filter">
        <a href=""><div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
        </a>
    </div>

    <div class="filter">
        <a href=""><div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pool</p>
        </a>
    </div>

    <div class="filter">
        <a href=""><div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
        </a>
    </div>
    
    <div class="filter">
        <a href=""><div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
        </a>
    </div>
    
    <div class="filter">
        <a href=""><div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
        </a>
    </div>
    
    <div class="filter">
        <a href=""><div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
        </a>
    </div>

    <div class="tax-toggle">
        <div class="form-check form-switch form-check-reverse">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
            <label class="form-check-label" for="flexSwitchCheckReverse">Display total after taxes</label>
          </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
        
        <a href="/listings/<%= listing._id %>" class="listing-link">

            <div class="card col listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height :20rem;">

                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b> <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                    
                    <i class="tax-info"> &nbsp; &nbsp; + 18% GST</i>
                </p>
                </div>
              </div>

        </a>
    <% } %>
</div>

</body>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckReverse");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }else{
                info.style.display = "none" ;
        }
            }
    });
</script>
